<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="joe.davtian.tms.TicketListController">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Tickets" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                <Button text="Refresh" onAction="#onRefresh" />
                <Button text="Add Ticket" onAction="#onAddTicket" />
            </children>
            <padding>
                <Insets top="10" right="10" bottom="10" left="10" />
            </padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="ticketsTable" prefHeight="500" prefWidth="900">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="150" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                <TableColumn fx:id="submissionColumn" text="Submitted" prefWidth="150" />
                <TableColumn fx:id="deadlineColumn" text="Deadline" prefWidth="150" />
                <TableColumn fx:id="priorityColumn" text="Priority" prefWidth="80" />
                <TableColumn fx:id="employeeColumn" text="Employee" prefWidth="90" />
                <TableColumn fx:id="typeColumn" text="Type" prefWidth="120" />
                <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="160" />
                <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="250" />
            </columns>
        </TableView>
    </center>
    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>
</BorderPane>
