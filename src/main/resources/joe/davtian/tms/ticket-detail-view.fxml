<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="joe.davtian.tms.TicketDetailController">
    <center>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="150" />
                <ColumnConstraints minWidth="200" prefWidth="350" />
            </columnConstraints>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <children>

                <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Label text="Date Submitted:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <DatePicker fx:id="submissionPicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <DatePicker fx:id="deadlinePicker" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Priority:" GridPane.columnIndex="0" GridPane.rowIndex="4" />

                <Label text="Type:" GridPane.columnIndex="0" GridPane.rowIndex="6" />

                <Label text="Subject:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <TextField fx:id="subjectField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <TextArea fx:id="descriptionArea" prefRowCount="4" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            <ComboBox fx:id="statusCombo" promptText="Select status" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <ComboBox fx:id="priorityCombo" promptText="Select priority" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="typeCombo" promptText="Select type" GridPane.columnIndex="1" GridPane.rowIndex="6" />
            </children>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="updateButton" onAction="#onUpdate" text="Update" />
                <Button fx:id="deleteButton" onAction="#onDelete" text="Delete" />
                <Button onAction="#onClose" text="Close" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
