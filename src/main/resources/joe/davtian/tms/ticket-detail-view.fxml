<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="joe.davtian.tms.TicketDetailController">
    <center>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="150" />
                <ColumnConstraints minWidth="200" prefWidth="350" />
            </columnConstraints>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <children>
                <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="idField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                <Label text="Status:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <TextField fx:id="statusField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                <Label text="Date Submitted:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                <DatePicker fx:id="submissionPicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                <Label text="Deadline:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                <DatePicker fx:id="deadlinePicker" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                <Label text="Priority:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
                <TextField fx:id="priorityField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

                <Label text="Employee ID:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
                <Spinner fx:id="employeeSpinner" GridPane.rowIndex="5" GridPane.columnIndex="1" prefWidth="150" />

                <Label text="Type:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
                <TextField fx:id="typeField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

                <Label text="Subject:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
                <TextField fx:id="subjectField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

                <Label text="Description:" GridPane.rowIndex="8" GridPane.columnIndex="0" />
                <TextArea fx:id="descriptionArea" GridPane.rowIndex="8" GridPane.columnIndex="1" prefRowCount="4" wrapText="true" />
            </children>
        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button text="Update" onAction="#onUpdate" fx:id="updateButton" />
                <Button text="Delete" onAction="#onDelete" fx:id="deleteButton" />
                <Button text="Close" onAction="#onClose" />
            </children>
            <padding>
                <Insets top="10" right="20" bottom="20" left="20" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>

